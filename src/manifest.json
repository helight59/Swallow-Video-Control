{
  "manifest_version": 3,
  "name": "Swallow Video Control",
  "version": "1.0.0",
  "description": "Seek HTML5 video Â±10s using WebHID Consumer Control buttons (0x00B3/0x00B4). Single-target tab, with hold-to-repeat.",
  "icons": {
    "16": "assets/icon/swallow_video_control_logo_16.png",
    "32": "assets/icon/swallow_video_control_logo_32.png",
    "48": "assets/icon/swallow_video_control_logo_48.png",
    "128": "assets/icon/swallow_video_control_logo_128.png",
    "256": "assets/icon/swallow_video_control_logo_256.png",
    "512": "assets/icon/swallow_video_control_logo_512.png",
    "1048": "assets/icon/swallow_video_control_logo_1024.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "32": "assets/icon/swallow_video_control_logo_rounded_32.png",
      "48": "assets/icon/swallow_video_control_logo_rounded_48.png",
      "128": "assets/icon/swallow_video_control_logo_rounded_128.png",
      "256": "assets/icon/swallow_video_control_logo_rounded_256.png",
      "512": "assets/icon/swallow_video_control_logo_rounded_512.png",
      "1048": "assets/icon/swallow_video_control_logo_rounded_1024.png"
    }
  },
  "options_page": "settings.html",
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "permissions": ["tabs", "scripting", "offscreen", "storage"],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["assets/*"],
      "matches": ["<all_urls>"]
    }
  ]
}