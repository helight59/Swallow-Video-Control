{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "module": "ES2022",
    "moduleResolution": "Bundler",
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "skipLibCheck": true,

    "outDir": "dist",
    "rootDir": "src",

    "types": ["chrome", "w3c-web-hid"],
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts", "src/types/**.d.ts"]
}